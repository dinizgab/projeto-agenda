<div class="bg"></div>
<main class="container">
  <form action="create-account/register" method="POST" class="form" autocomplete="off"> 
    <%- include('./errors') %>
    <input type="hidden" name="_csrf" value=<%= csrfToken %> />

    <h2>Crie sua conta agora</h2>
    <p>É rápido e fácil</p>
    <label for="email">E-mail</label>
    <input type="text" name="email" placeholder="E-mail" />

    <label for="user">Usuário</label>
    <input type="text" name="user" placeholder="Usuário" />

    <label for="password">Senha</label>
    <input type="password" name="password" placeholder="Senha" />

    <label for="confirm">Confirme a senha</label>
    <input type="password" name="confirm" placeholder="Confirme a senha" />

    <button type="submit" class="button">Enviar</button>
  </form>
</main>
